<Window x:Class="GameEngineHrundelGUI.BootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameEngineHrundelGUI"
        mc:Ignorable="d"
        Title="BootWindow" Height="73" Width="200" Closing="Window_Closing">
    <StackPanel Background="#FF151515" Orientation="Vertical">
        <TextBlock x:Name="LogText" Text="Loading" FontFamily="Consolas" Foreground="White" FontSize="16" TextWrapping="Wrap"/>
        <ProgressBar x:Name="LoadingBar" Height="22" Maximum="100" Minimum="0" Value="30" BorderBrush="{x:Null}" Background="#FF151515" Foreground="White"/>
    </StackPanel>
</Window>
